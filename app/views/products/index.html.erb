<div class="max-w-6xl mx-auto px-4">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  
  <h1 class="font-bold mb-4 text-4xl text-blue-500">Products</h1>
    <p class="mt-5">Total Products: <%= @products.count %> products.</p>
    
  <ul class="grid grid-cols-4 gap-4">
      <%= render @products %>
  </ul>  
  <%= link_to 'New product', new_product_path, class: "btn-primary mt-5" %>
</div>